{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Base DOM",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "target": "ES2022",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "pretty": true,
    "preserveWatchOutput": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
